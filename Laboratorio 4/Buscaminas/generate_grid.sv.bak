module generate_grid(input logic [9:0] x, y,
					 input logic [9:0] i, j,
					 input logic select,
					 output logic [7:0] r, g, b
);
    
	 logic inrectBG1;
    logic inrectBG2;
	 logic inrectMarca;
	 
	 logic inAreaRect; // Área para cambiar color
	 
	 logic [7:0] colorR, colorG, colorB;
	 
	 assign colorR = (select) ? 8'b11111111 : 8'b00000000;
	 assign colorG = (select) ? 8'b00000000 : 8'b11111111;
	 assign colorB = (select) ? 8'b00000000 : 8'b00000000;
    
	 
    // Rectangulo lateral izq
    rectgen rectBG1(x, y, 10'd0, 10'd0, 10'd80, 10'd480, inrectBG1);
	 
    // Rectangulo lateral der
    rectgen rectBG2(x, y, 10'd560, 10'd0, 10'd640, 10'd480, inrectBG2);
	 
	 rectgen rectMarca(x, y, i, j, i+60, j+60, inrectMarca);
	 
	 
	 assign inAreaRect = (x >= 80) && (x < 560) && ((x-80) % 61 < 60) && (y % 61 < 60);
	 assign inAreaMarcada = (i >= 80) && (i < 560) && ((i-80) % 61 < 60) && (j % 61 < 60);
	
	 
	// Definir colores para las áreas específicas
	assign r = (inrectBG1 | inrectBG2) ? 8'b11111111 : (inrectMarca ? colorR : (inAreaRect ? 8'b10101010 : 8'b00000000));
	assign g = (inrectBG1 | inrectBG2) ? 8'b11111111 : (inrectMarca ? colorG : (inAreaRect ? 8'b10101010 : 8'b00000000));
	assign b = (inrectBG1 | inrectBG2) ? 8'b11111111 : (inrectMarca ? colorB : (inAreaRect ? 8'b10101010 : 8'b00000000));

	 
	 
    
endmodule



